<%- include('../partials/header') %>


<% if (user.googleId) { %>
  <!-- Display Google Avatar -->
  <img src="<%= user.avatar %>" alt="<%= `${user.name}'s Google Avatar` %>" class="user-avatar" />
<% } %>

<% if (user.spotifyId) { %>
  <!-- Display Spotify Avatar -->
  <img src="<%= user.avatar %>" alt="<%= `${user.name}'s Spotify Avatar` %>" class="user-avatar" />
<% } %>

<table id="list">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% albums.forEach(function(a) { %>
      <tr>
        <td><%= a.artist %></td>
        <td><%= a.title %></td>
        <td><a href="/albums/<%= a._id %>">SCORE</a></td>
        <td>
            <form action="/albums/<%= a._id %>?_method=DELETE" method="POST" class="delete-form">
              <button type="submit" class="delete-button">X</button>
            </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>

  <% if (user.googleId) { %>
  <div class="spinbox-logo">
    <img src="https://i.imgur.com/SE83GSC.png" alt="spinbox-logo" class="spinbox-logo" />
  </div>
<% } %>

  <% if (user.spotifyId) { %>
    <a href="https://open.spotify.com/user/<%= user.spotifyId %>">
      <img src="https://i.imgur.com/qvdqtsc.png" alt="<%= `${user.name}'s Spotify Profile` %>" class="spotifyProfileLink" />
    </a>
    <h3>Tune In Now!</h3>
  <% } %>
  
<%- include('../partials/footer') %>